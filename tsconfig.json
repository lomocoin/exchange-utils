{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "target": "es5",
    "outDir": "dist",
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["dom", "es2016"],
    "typeRoots": ["./node_modules/@types", "./typings/"],
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
